{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class="container">
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}

    <div class="row mx-auto">
            <div class="col-md-4">
                <label for="firstname" class="form-label mb-0 ">Pr√©nom</label>
                {{ form_widget(registrationForm.firstname, {'attr':{'class': 'form-control mt-0'}}) }}
            </div>
            <div class="col-md-4">
                <label for="lastname" class="form-label mb-0">Nom</label>
                {{ form_widget(registrationForm.lastname, {'attr':{'class': 'form-control mt-0'}}) }}
            </div>
        <div class="col-md-4">
            <label for="pseudo" class="form-label mb-0">Pseudo</label>
            {{ form_widget(registrationForm.pseudo, {'attr':{'class': 'form-control mt-0'}}) }}
        </div>
    </div>

    <div class="row mx-auto">
        <div class="col-md-6">
            <label for="birthday" class="form-label mb-0">Date de Naissance</label>
            {{ form_widget(registrationForm.birthday, {'attr':{'class': 'form-control mt-0'}}) }}
        </div>
        <div class="col-md-6">
            <label for="picture" class="form-label mb-0">Photo de profil</label>
            {{ form_widget(registrationForm.picture, {'attr':{'class': 'form-control mt-0'}}) }}
        </div>
    </div>

    <div class="row mx-auto">
        <div class="col-md-6">
            <label for="email" class="form-label mb-0">Email</label>
            {{ form_widget(registrationForm.email, {'attr':{'class': 'form-control mt-0'}}) }}
        </div>
        <div class="col-md-6">
            <label for="plainPassword" class="form-label mb-0">Mot de Passe</label>
            {{ form_widget(registrationForm.plainPassword, {'attr':{'class': 'form-control mt-0'}}) }}
        </div>
    </div>
    {{ form_row(registrationForm.agreeTerms, {'attr':{'class': ''}}) }}
    <div class="text-center mt-4">
        <button class="btn btn-lg btn-primary" type="submit">
            Inscription
        </button>
    </div>
    {{ form_end(registrationForm) }}
</div>

{% endblock %}
