{% extends 'base.html.twig' %}

{% block title %}Trick index{% endblock %}

{% block main %}
    <main class="">
        <section id="up" class="banner my-4" style="background:url(/images/pexels-leroy-filon-311065.jpg)">
            <h1 class="text-center">
SNOW TRICKS
            </h1>
            <a href="#down"></a>
        </section>
        <section id="down" class="trick-list my-4 container">
            {% if user %}
            <div class="text-end my-4">
            <a href="{{ path('app_trick_new') }}">Create new</a>
            </div>
            {% endif %}
            <ul class="d-flex justify-content-between">
                {% for trick in tricks %}
                <li class="card">
                    <img src="{{ trick.banner }}" alt="{{ trick.name }}" class="card-img-top">
                    <div class="card-body d-flex justify-content-between">
                        <div>
                            <a href="{{ path('app_trick_show', {'id': trick.id}) }}"><h2>{{ trick.name }}</h2></a>
                        </div>
                        {% if user %}
                        <div class="ms-4">
                            <a href="{{ path('app_trick_edit', {'id': trick.id}) }}"><i class="bi bi-pencil btn"></i></a>
                            {{ include('trick/_delete_form.html.twig') }}
                        </div>
                        {% endif %}
                    </div>
                </li>
                {% else %}
                    <div>
                <span>no records found</span>
                    </div>
                {% endfor %}
            </ul>
            <div class="text-center">
            <button>Load More</button>
            </div>
        </section>
        <a href="#up" class="fixed-bottom display-1 text-end">^</a>
    </main>
{% endblock %}
